        },
        "password": {
          "type": "string",
          "title": "Password of the user.\nMust be at least 8 characters long.\nMust only contain alphanumeric characters (a-z, A-Z, 0-9)\nand the following special characters: !@#$%^\u0026*()-_+="
        }
      }
    },
